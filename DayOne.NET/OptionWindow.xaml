<Window x:Class="DayOne.NET.OptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OptionWindow" Height="300" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="DropBox Path: " VerticalAlignment="Center" HorizontalAlignment="Right" />
        <TextBox Grid.Column="1" Text="" VerticalAlignment="Center" Margin="5" />
        <StackPanel Grid.ColumnSpan="2" Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Content="Save" Width="90" Height="30" Margin="5"/>
            <Button Content="Cancel" Width="90" Height="30" Margin="5,10"/>

        </StackPanel>
    </Grid>
</Window>
